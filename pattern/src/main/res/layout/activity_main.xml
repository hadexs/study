<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="设计模式" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_six_principle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面像对象的六大原则" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------创建型模式-----------------" />

            <Button
                android:id="@+id/btn_single_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单例" />


            <Button
                android:id="@+id/btn_factory_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工厂方法模式" />

            <Button
                android:id="@+id/btn_abstract_factory_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抽象工厂模式" />

            <Button
                android:id="@+id/btn_builder_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建造者模式" />

            <Button
                android:id="@+id/btn_clone_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原型模式" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------结构型模式-----------------" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------行为型模式-----------------" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
